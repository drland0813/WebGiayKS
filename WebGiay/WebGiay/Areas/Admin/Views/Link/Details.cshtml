@model MyClass.Model.Link

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<div>
    <h4>THÔNG TIN LINK</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            TÊN BẢNG
        </dt>

        <dd>
            @Html.DisplayFor(model => model.table_name)
        </dd>

        <dt>
            MÃ BẢNG
        </dt>

        <dd>
            @Html.DisplayFor(model => model.table_id)
        </dd>

    </dl>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10 my-3">
            <p class="btn btn-primary"> @Html.ActionLink("Chỉnh Sửa", "Edit", new { id = Model.slug})</p>
            <a href="@Url.Action("Index","Link")" class="btn btn-success">Quay lại</a>
        </div>
    </div>
</div>
