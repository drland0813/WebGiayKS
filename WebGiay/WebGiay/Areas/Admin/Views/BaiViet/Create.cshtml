                @Html.ValidationMessageFor(model => model.image, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                TÊN CHỦ ĐỀ
                @Html.EditorFor(model => model.tenCD, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.tenCD, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10 my-3">
                <input type="submit" value="Thêm" class="btn btn-primary" />
                <a href="@Url.Action("Index","BaiViet")" class="btn btn-success">Quay lại</a>
            </div>
        </div>
    </div>
}

