@model MyClass.Model.KhuyenMai

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>CHỈNH SỬA KHUYẾN MÃI</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id_KM)

        <div class="form-group">
            <div class="col-md-10">
                TỪ NGÀY
                @Html.EditorFor(model => model.tuNgay, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.tuNgay, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                ĐẾN NGÀY
                @Html.EditorFor(model => model.denNgay, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.denNgay, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                GIÁ KHUYẾN MÃI
                @Html.EditorFor(model => model.giaSale, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.giaSale, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10 my-3">
                <input type="submit" value="Lưu" class="btn btn-info" />
                <a href="@Url.Action("Index","KhuyenMai")" class="btn btn-success">Quay lại</a>
            </div>
        </div>
    </div>
}

