@model MyClass.Model.LoaiGiay

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}



<div>
    <h4>CHI TIẾT LOẠI GIÀY</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            TÊN LOẠI GIÀY
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tenLoai)
        </dd>

        <dt>
            XUẤT XỨ
        </dt>

        <dd>
            @Html.DisplayFor(model => model.xuatXu)
        </dd>

        <dt>
            SLUG
        </dt>

        <dd>
            @Html.DisplayFor(model => model.slug)
        </dd>

    </dl>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10 my-3">
            <p class="btn btn-primary"> @Html.ActionLink("Chỉnh Sửa", "Edit", new { id = Model.maLoai })</p>
            <a href="@Url.Action("Index","LoaiGiay")" class="btn btn-success">Quay lại</a>
        </div>
    </div>
</div>
