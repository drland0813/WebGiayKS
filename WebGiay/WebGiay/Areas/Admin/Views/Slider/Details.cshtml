@model MyClass.Model.Slider

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<div>
    <h4>THÔNG TIN SLIDER</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            VỊ TRÍ
        </dt>

        <dd>
            @Html.DisplayFor(model => model.viTri)
        </dd>

        <dt>
            TRẠNG THÁI
        </dt>

        <dd>
            @Html.DisplayFor(model => model.trangThai)
        </dd>

        <dt>
            HÌNH ẢNH
        </dt>

        <dd>
            @Html.DisplayFor(model => model.image)
        </dd>

    </dl>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10 my-3">
            <p class="btn btn-primary"> @Html.ActionLink("Chỉnh Sửa", "Edit", new { id = Model.maSlide})</p>
            <a href="@Url.Action("Index","Slider")" class="btn btn-success">Quay lại</a>
        </div>
    </div>
</div>

