@model IEnumerable<MyClass.Model.Giay>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-md-6">
                <strong class="text-danger text-uppercase">TẤT CẢ SẢN PHẨM</strong>
            </div>
            <div class="col-md-6 text-right">
                <a href="@Url.Action("Create","Product")" class="btn btn-success"><i class="fas fa-plus"></i> Thêm</a>
                <a href="#" class="btn btn-danger"><i class="fas fa-trash"></i> Thùng Rác</a>
            </div>
        </div>
    </div>
    <div class="card-body">
        <table id="aa" class="table table-bordered table-hover table-striped">
            <thead>
                <tr>
                    <th style="width: 20px;" class="text-center">#</th>
                    <th style="width:100px;">Hình ảnh</th>
                    <th class="text-center">Tên Giày</th>
                    <th class="text-center">Loại Giày</th>
                    <th class="text-center">Ngày Nhập</th>
                    <th class="text-center">Giá Bán</th>
                    <th class="text-center">ID</th>
                    <th class="text-center">Chức Năng </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <input type="checkbox" name="checkselected" />
                        </td>
                        <td>
                            <img src="~/public/images/product/@item.image" class="img-fluid" alt="Alternate Text" />
                        </td>
                        <td class="text-center">
                            @Html.DisplayFor(modelItem => item.tenGiay)
                        </td>
                        <td class="text-center">
                            @Html.DisplayFor(modelItem => item.LoaiGiay.tenLoai)
                        </td>
                        <td class="text-center">
                            @Html.DisplayFor(modelItem => item.ngayTao)
                        </td>
                        <td class="text-center">
                            @Html.DisplayFor(modelItem => item.giaBan)
                        </td>
                        <td class="text-center">
                            @Html.DisplayFor(modelItem => item.maGiay)
                        </td>
                        <td class="text-center">
                            @if (item.trangThai == 1)
                            {
                                <a class="btn btn-info btn-sm" href="@Url.Action("Edit","Product", new {id=item.maGiay })"><i class="fas fa-toggle-on"></i></a>

                            }
                            else
                            {
                                <a class="btn btn-info btn-sm" href="@Url.Action("Edit","Product", new {id=item.maGiay })"><i class="fas fa-toggle-off"></i></a>

                            }
                            <a class="btn btn-info btn-sm" href="@Url.Action("Edit","Product", new {id=item.maGiay })"><i class="fas fa-edit"></i></a>
                            <a class="btn btn-warning btn-sm" href="@Url.Action("Details","Product", new {id=item.maGiay })"><i class="fas fa-eye"></i></a>
                            <a class="btn btn-danger btn-sm" href="@Url.Action("DelTrash","Product", new {id=item.maGiay })"><i class="fas fa-edit"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
@section header {

    <link href="~/public/css/jquery.dataTables.min.css" rel="stylesheet" />
}
@section footer {
    <script src="~/public/js/jquery.dataTables.min.js"></script>
    <script>
        jQuery(document).ready(function () {
            jQuery('#aa').DataTable();
        });
    </script>
}
