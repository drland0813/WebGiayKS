            {
            if (id == null)
            {
            return new HttpStatusCodeResult(HttpStatusCode.BadRequest);
            }
            Product product=db.Product.Find(id)
            product.Status=(product.Status==1)?2:1;
            if(product.Status==1)
            db.Entry(product).State = EntityState.Modified;
            db.SaveChanges();
            return RedirectToAction("Index");
            }*@
                        <a class="btn btn-info btn-sm" href="@Url.Action("Edit","Giay",new { id = item.maGiay })"><i class="fas fa-edit"></i></a>
                        <a class="btn btn-warning btn-sm" href="@Url.Action("Details","Giay",new { id = item.maGiay })"><i class="fas fa-eye"></i></a>
                        <a class="btn btn-danger btn-sm" href="@Url.Action("DelTrash","Giay",new { id = item.maGiay })"><i class="fas fa-trash"></i></a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>
@section header{
    <link href="~/public/css/jquery.dataTables.min.css" rel="stylesheet" />
}
@section footer{
    <script src="~/public/js/jquery.dataTables.min.js"></script>
    <script>
        jQuery(document).ready(function () {
            jQuery('#myTable').DataTable();
        });
    </script>
}

