@model MyClass.Model.Giay

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<div>
    <h4>Thông tin chi tiết</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên Giày
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tenGiay)
        </dd>

        <dt>
            Loại Giày
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LoaiGiay.tenLoai)
        </dd>

        <dt>
            Trạng Thái
        </dt>

        <dd>
            @Html.DisplayFor(model => model.trangThai)
        </dd>

        <dt>
            Slug
        </dt>

        <dd>
            @Html.DisplayFor(model => model.slug)
        </dd>

        <dt>
            Giá Bán
        </dt>

        <dd>
            @Html.DisplayFor(model => model.giaBan)
        </dd>

        <dt>
            Giá Nhập
        </dt>

        <dd>
            @Html.DisplayFor(model => model.giaNhap)
        </dd>

        <dt>
            Ngày Tạo
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ngayTao)
        </dd>

        <dt>
            Hình ảnh
        </dt>

        <dd>
            @Html.DisplayFor(model => model.image)
        </dd>

        <dt>
            Chi Tiết
        </dt>

        <dd>
            @Html.DisplayFor(model => model.chiTiet)
        </dd>

    </dl>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10 my-3">
            <p class="btn btn-primary"> @Html.ActionLink("Chỉnh Sửa", "Edit", new { id = Model.maGiay })</p>
            <a href="@Url.Action("Index","Giay")" class="btn btn-success">Quay lại</a>
        </div>
    </div>
</div>

