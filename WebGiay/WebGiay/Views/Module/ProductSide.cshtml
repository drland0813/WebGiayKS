@model IEnumerable<MyClass.Model.Giay>
<h3 class="my-3">SẢN PHẨM MỚI</h3>
@foreach (var item in Model)
{

<div class="hold my-3">
    <a href="~/@item.slug" class="right-bar-pic" style="width:20%; padding-top:20%;display:inline-block;position:relative;">
        <img src="~/public/images/product/@item.image" style="position:absolute;top:0;
                left:0; width:100%;height:100%;" alt="Alternate Text" />
    </a>
    <div class="right-bar-content" style="width:75%;display:inline-block;">
        <a href="~/@item.slug">@item.tenGiay</a>
        <p class="">Giá: @item.giaBan đ</p>
    </div>
</div>
}
