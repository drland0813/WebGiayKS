    <div id="multi-item-example2" class="carousel slide carousel-multi-item container" data-ride="carousel">

        <!--Controls-->
        <div class="controls-top" style="float:right">
            <a class="btn-floating" href="#multi-item-example2" data-slide="prev"><i class="fas fa-chevron-left"></i></a>
            <a class="btn-floating" href="#multi-item-example2" data-slide="next">
                <i class="fas fa-chevron-right"></i>
            </a>
        </div>

        <div class="carousel-inner" role="listbox">


            <div class="carousel-item active">
                @foreach (var product in GiayLienQuan.Take(4))
                {
                    if (product.trangThai == 1)
                    {
                        <div class="col-xl-3 col-lg-3 col-md-4 col-sm-6 my-3" style="float:left">
                            <div class="card my-card" style="width:100%;">
                                <a href="~/@product.slug">
                                    <img class="card-img-top" src="~/public/images/product/@product.image" alt="Card image cap">
                                </a>
                                <div class="card-body my-card-body">
                                    <a href="~/@product.slug" class="card-title my-card-title">@product.tenGiay</a>
                                    <p class="card-text">Giá: @product.giaBan đ</p>
                                    <a href="~/@product.slug" class="btn btn-danger" style="float:right;">Mua</a>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
            <div class="carousel-item">
                @foreach (var product in GiayLienQuan.Skip(4))
                {
                    if (product.trangThai == 1)
                    {
                        <div class="col-xl-3 col-lg-3 col-md-4 col-sm-6 my-3" style="float:left">
                            <div class="card my-card" style="width:100%;">
                                <a href="~/@product.slug">
                                    <img class="card-img-top" src="~/public/images/product/@product.image" alt="Card image cap">
                                </a>
                                <div class="card-body my-card-body">
                                    <a href="~/@product.slug" class="card-title my-card-title">@product.tenGiay</a>
                                    <p class="card-text">Giá: @product.giaBan đ</p>
                                    <a href="~/@product.slug" class="btn btn-danger" style="float:right;">Mua</a>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>

        </div>
    </div>
                

 
