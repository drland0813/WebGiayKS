@model MyClass.Model.Giay
@{
    ViewBag.Title = "ProductDetail";
    Layout = "~/Views/Shared/_LayoutSite.cshtml";
} 
@{ 
    IEnumerable<MyClass.Model.Giay> GiayLienQuan = ViewData["GiayLienQuan"] as IEnumerable<MyClass.Model.Giay>;
}

<div class="container">
    <div class="row my-4 product_detail">


        <div class="col-xl-5 col-lg-4 col-md-4 col-sm-12">
            <div class="img_wrap">
                <div class="img" style="background-image: url('../../public/images/product/@Model.image');"></div>
            </div>
        </div>
        <div class="col-xl-7 col-lg-8 col-md-8 col-sm-12 ">
            <div class="rating">
                <input type="radio" name="rating" value="5" id="1">
                <label for="1">☆</label>
                <input type="radio" name="rating" value="4" id="2">
                <label for="2">☆</label>
                <input type="radio" name="rating" value="3" id="3">
                <label for="3">☆</label>
                <input type="radio" name="rating" value="2" id="4">
                <label for="4">☆</label>
                <input type="radio" name="rating" value="1" id="5">
                <label for="5">☆</label>
            </div>
            <h3>@Model.tenGiay</h3>
            <p>Mã SP: <span>@Model.maGiay</span></p>
            <p class="price">@Model.giaBan VNĐ</p>


            <form class="login-form" method="post" action="/Site/ProductDetail">

                <div name="maGiay" style="display : none;"> @Html.TextBoxFor(g => g.maGiay) </div>
                <input type="number" name="number" value="1" min="1" style="padding:10px 0;text-align:center;font-size:20px;
                    font-weight:700;border:1px solid rgba(0,0,0,.3);width:200px;margin-bottom:20px;" />

                <select class="form-select form-control" name="size" style="width:200px;" 
                        aria-label="Default select example" required 
                        oninvalid="this.setCustomValidity('Xin hãy chọn size')"
                        oninput="this.setCustomValidity('')">

                    <option selected value="" disabled>Mời chọn size</option>
                    @foreach (var item in Model.ChiTietGiays)
                    {
                        if (item.soLuongTon > 2)
                        {
                            <option value=@item.size> @item.size </option>
                        }
                        else
                        {
                            <option value="" disabled> @item.size - Đã hết hàng </option>
                        }
                    }
                </select>

                <div class="form-check">

                    <button type="submit" class="btn btn-danger mt-4"
                            style="display:block;width:150px;border-radius:20px;padding:8px 0;"> Mua
                    </button>
                </div>

            </form>


                <p class="mt-2">Hoặc đặt mua: <span style="color:red;">090xxxxxxxx</span> ( Tư vấn Miễn phí )</p>
                <p class="free_ship"><b>Free Ship</b> tại khu vực Hồ Chí Minh</p>

        </div>
        <!--comment-->

        <div id="fb-root"></div>
        <script async defer crossorigin="anonymous" src="https://connect.facebook.net/vi_VN/sdk.js#xfbml=1&version=v9.0" nonce="Lc0lITfh"></script>
