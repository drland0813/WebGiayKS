@using MyClass.Model



@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_LayoutSite.cshtml";
}

@{
    IEnumerable<Giay> Model = ViewData["ListSP"] as IEnumerable<Giay>;
    IEnumerable<Giay> ListSPHot = ViewData["ListSPHot"] as IEnumerable<Giay>;
    IEnumerable<Giay> giayKM = ViewData["GiayKM"] as IEnumerable<Giay>;
}
@Html.Action("SlideShow", "Module")
<div class="famous-say">
    <p>"A journey of a thousand miles begin with a fabulous pair of shoes"</p>
    <h3>-Hudson + Bleecker</h3>
</div>
<div class="product">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h3 data-aos="fade-up" data-aos-duration="800" data-mask="PRODUCT">- SẢN PHẨM MỚI</h3>
            </div>
            @foreach (var item in Model)
            {
                if (item.trangThai == 1)
                {
                    <div data-aos="fade-up" data-aos-duration="300" class="col-xl-3 col-lg-3 col-md-4 col-sm-6 my-3">
                        <div class="card my-card" style="width:100%;">
                            <a href="~/@item.slug">
                                <img class="card-img-top" src="~/public/images/product/@item.image" alt="Card image cap">
                            </a>
                            <div class="card-body my-card-body">
                                <a href="~/@item.slug" class="card-title my-card-title">@item.tenGiay</a>
                                <p class="card-text">Giá: @item.giaBan đ</p>
                                <a href="#" class="btn btn-danger" style="float:right;">Mua</a>
                            </div>
                        </div>
                    </div>
                }
            }



            @*pagination start*@
            <div class="col-4"></div>
            <div class="col-4" style="display:flex;justify-content:center;margin-top:15px;">

                <nav aria-label="Page navigation example">
                    <ul class="pagination">
                        <li class="page-item disabled">
                            <a class="page-link" href="#" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                                <span class="sr-only">Previous</span>
                            </a>
                        </li>
                        <li class="page-item active"><a class="page-link" href="~/sanpham">1 <span class="sr-only">(current)</span></a></li>
                        <li class="page-item"><a class="page-link" href="~/sanpham">2</a></li>
                        <li class="page-item"><a class="page-link" href="~/sanpham">3</a></li>
                        <li class="page-item">
                            <a class="page-link" href="#" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                                <span class="sr-only">Next</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>

            @*pagination*@
            <div class="col-12 mt-4">
                <h3 data-aos="fade-left" data-aos-duration="800" data-mask="HOT">- SẢN PHẨM HOT</h3>
            </div>
            <!--Carousel Wrapper-->
            <div data-aos="fade-right" data-aos-duration="800" id="multi-item-example" class="carousel slide carousel-multi-item container" data-ride="carousel">

                <!--Controls-->
                <div class="controls-top" style="float:right">
                    <a class="btn-floating" href="#multi-item-example" data-slide="prev"><i class="fas fa-chevron-left"></i></a>
                    <a class="btn-floating" href="#multi-item-example" data-slide="next"><i class="fas fa-chevron-right"></i></a>
                </div>
                <!--/.Controls-->
                <!--Indicators-->
                <!--/.Indicators-->
                <!--Slides-->
                <div class="carousel-inner" role="listbox">
                    <div class="carousel-item active">
                        <!--First slide-->
                        <div class="row">
                            @foreach (var item in ListSPHot.Take(4))
                            {


                                if (item.trangThai == 1)
                                {
                                    <div class="col-xl-3 col-lg-3 col-md-4 col-sm-6 my-3">
                                        <div class="card my-card" style="width:100%;">
                                            <a href="~/@item.slug">
                                                <img class="card-img-top" src="~/public/images/product/@item.image" alt="Card image cap">
                                            </a>
                                            <div class="card-body my-card-body">
                                                <a href="~/@item.slug" class="card-title my-card-title">@item.tenGiay</a>
                                                <p class="card-text">Giá: @item.giaBan đ</p>
                                                <a href="#" class="btn btn-danger" style="float:right;">Mua</a>
                                            </div>
                                        </div>
                                    </div>
                                }


                            }
                        </div>
                    </div>
                    <!--Second slide-->
                    <div class="carousel-item">
                        <div class="row">
                            @foreach (var item in ListSPHot.Skip(4))
                            {
                                if (item.trangThai == 1)
                                {
                                    <div class="col-xl-3 col-lg-3 col-md-4 col-sm-6 my-3">
                                        <div class="card my-card" style="width:100%;">
                                            <a href="~/@item.slug">
                                                <img class="card-img-top" src="~/public/images/product/@item.image" alt="Card image cap">
                                            </a>
                                            <div class="card-body my-card-body">
                                                <a href="~/@item.slug" class="card-title my-card-title">@item.tenGiay</a>
                                                <p class="card-text">Giá: @item.giaBan đ</p>
                                                <a href="#" class="btn btn-danger" style="float:right;">Mua</a>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                        </div>
                    </div>
                </div>

                <!--/.Slides-->


            </div>
            <!--/.Carousel Wrapper-->
            <!--San pham Khuyen mai-->
            <div class="col-12 mt-5">
                <h3  data-aos="fade-right" data-aos-duration="800" data-mask="DISCOUNT">- SẢN PHẨM KHUYẾN MÃI</h3>
            </div>
            <!--Carousel Wrapper-->
            <div  data-aos="fade-left" data-aos-duration="800" id="multi-item-example2" class="carousel slide carousel-multi-item container" data-ride="carousel">

                <!--Controls-->
                <div class="controls-top" style="float:right">
                    <a class="btn-floating" href="#multi-item-example2" data-slide="prev"><i class="fas fa-chevron-left"></i></a>
                    <a class="btn-floating" href="#multi-item-example2" data-slide="next">
                        <i class="fas fa-chevron-right"></i>
                    </a>
                </div>
                <!--/.Controls-->
                <!--Slides-->
                <div class="carousel-inner" role="listbox">

                    <!--First slide-->
                    <div class="carousel-item active">
                        <div class="row">
                            @foreach (var item in giayKM.Take(giayKM.Count() / 2))
                            {
                                if (item.trangThai == 1)
                                {
                                    <div class="col-xl-3 col-lg-3 col-md-4 col-sm-6 my-3">
                                        <div class="card my-card" style="width:100%;">
                                            <a href="~/@item.slug">
                                                <img class="card-img-top" src="~/public/images/product/@item.image" alt="Card image cap">
                                            </a>
                                            <div class="card-body my-card-body">
                                                <a href="~/@item.slug" class="card-title my-card-title">@item.tenGiay</a>
                                                <p class="card-text">Giá: @item.giaBan đ</p>
                                                <a href="#" class="btn btn-danger" style="float:right;">Mua</a>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                        </div>
                    </div>
                    <!--/.First slide-->
                    <!--Second slide-->
                    <div class="carousel-item">
                        <div class="row">
                            @foreach (var item in giayKM.Skip(giayKM.Count() / 2))
                            {
                                if (item.trangThai == 1)
                                {
                                    <div class="col-xl-3 col-lg-3 col-md-4 col-sm-6 my-3">
                                        <div class="card my-card" style="width:100%;">
                                            <a href="~/@item.slug">
                                                <img class="card-img-top" src="~/public/images/product/@item.image" alt="Card image cap">
                                            </a>
                                            <div class="card-body my-card-body">
                                                <a href="~/@item.slug" class="card-title my-card-title">@item.tenGiay</a>
                                                <p class="card-text">Giá: @item.giaBan đ</p>
                                                <a href="#" class="btn btn-danger" style="float:right;">Mua</a>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                        </div>

                    </div>
                    <!--/.Second slide-->



                </div>
                <!--/.Slides-->

            </div>
            <!--/.Carousel Wrapper-->

            @Html.Action("HomePost", "Module")
        </div>
    </div>
</div>



