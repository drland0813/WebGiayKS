                        <li class="mr-3">
                            <a href="~/dang-nhap">Đăng nhập</a>
                        </li>*@
                </ul>
            </div>
        </div>
        <div class="container">

            <div class="row">

                <nav class="navbar navbar-expand-lg navbar-light bg-primary-color my-nav">
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav mr-auto my-navbar-lish">
                            <li class="nav-item @*active*@ mx-2">
                                <a class="nav-link" href="https://localhost:44375/">Trang Chủ <span class="sr-only">(current)</span></a>
                            </li>
                            <li class="nav-item  mx-2">
                                <a class="nav-link" href="~/gioi-thieu">Giới Thiệu</a>
                            </li>
                            <a class="navbar-brand  mx-4" href="https://localhost:44375/">
                                <img src="~/public/images/logo2.png" style="width:156px; height: 55px; margin-top:10px;" alt="Alternate Text" />
                            </a>

                            <li class="nav-item  mx-2">
                                <a class="nav-link" href="~/tin-tuc">Tin Tức</a>
                            </li>
                            <li class="nav-item  mx-2">
                                <a class="nav-link" href="~/lien-he">Liên Hệ</a>
                            </li>
                        </ul>

                    </div>
                    <div class="my-form">
                        <form action="/Site/Search" method="get" class="form-inline my-2 my-lg-0">
                            <input class="form-control mr-sm-2" type="search" placeholder="Tìm kiếm" aria-label="Search" name="key">
                            <button class="btn btn-outline-light my-2 my-sm-0 my-form-btn" type="submit" name="submit"><i class="fas fa-search"></i></button>
                        </form>
                        <a href="~/gio-hang"><i class="fas fa-shopping-cart"></i></a>

                    </div>
                </nav>


            </div>



        </div>

        <!--end navbar-->
    </section>
    <section id="mainmenu" style="height:32px;">
        @Html.Action("MainMenu", "Module")
    </section>
    <section id="maincontent">@RenderBody()</section>
    <section id="support" class="bg-support py-4 mt-4">
        <div class="container">
            <div data-aos="fade-right" data-aos-offset="300" data-aos-easing="ease-in-sine" class="row">
