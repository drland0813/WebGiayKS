    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <link href="~/public/css/LayoutSite.css" rel="stylesheet" />
    <link href="~/public/css/LayouSiteReponsive.css" rel="stylesheet" />
    @RenderSection("header", required: false)
</head>
<body>
    <div class="loader-wrapper">
        <span class="loader"><span class="loader-inner"></span></span>
    </div>
    <section id="header" class="bg-primary-color">
        <div class="my__header-top py-1">
            <div class="container">
                <ul>
                    <li class="mr-3">
                        <a href="~/lien-he">
                            <i class="far fa-question-circle"></i>
                            Trợ giúp
                        </a>
                    </li>
                    <li class="mr-3">
                        <a href="~/lien-he">
                            <i class="fas fa-phone-alt"></i>
                            Hotline: 099999999
                        </a>
                    </li>
                    @if (Session["userID"] != null)
                    {
                        <li class="mr-3">
                            <a href="~/dang-ky">Đăng ký</a>
                        </li>
                        <li class="mr-3">
                            <a href="~/Account_KH/Index">
                                <img src="~/public/images/avatar.jpg" style="@*border-radius:50%*@;width:32px;height:20px;margin-bottom:2px;margin-right:5px" alt="Alternate Text" />
                                @Session["FullName"]
                                ID: @Session["userID"]
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="mr-3">
                            <a href="~/dang-ky">Đăng ký</a>
                        </li>
                        <li class="mr-3">
                            <a href="~/dang-nhap">Đăng nhập</a>
                        </li>
                    }
                    @*<li class="mr-3">
