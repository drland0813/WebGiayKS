
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutSite.cshtml";
}

@{ 
    IEnumerable<MyClass.Model.Cart> ListSP = ViewData["cart"] as IEnumerable<MyClass.Model.Cart>;
}

<div class="container mb-4 bg-grey py-4">
    <div class="row">
        <div class="col-12">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col">STT</th>
                            <th scope="col">Hình </th>
                            <th scope="col">Sản phẩm</th>
                            <th scope="col" class="text-center">Số lượng</th>
                            <th scope="col" class="text-right">Giá</th>
                            <th> </th>
                        </tr>
                    </thead>
                    <tbody>
                        @{ decimal thanhTien = 0; decimal tongTien = 0; decimal phiGiaoHang = 0;}
                        @if (ListSP != null)
                        {

                            foreach (var item in ListSP)
                            {
                                thanhTien += (item.soLuong * item.giay.giaBan);
                                <tr>
                                    <td>01</td>
                                    <td style="width:20px;"><img src="~/public/images/product/@item.giay.image" class="img-fluid" /> </td>
                                    <td>@item.giay.tenGiay</td>
                                    <td><input class="form-control" type="number" value=@item.soLuong /></td>
                                    <td class="text-right">@item.giay.giaBan</td>
                                    <td class="text-right"><button class="btn btn-sm btn-danger"><i class="fa fa-trash"></i> </button> </td>
                                </tr>
                            }
                            Decimal temp = 0.01M;
                            phiGiaoHang = Decimal.Multiply(thanhTien, temp);

                            tongTien = thanhTien + phiGiaoHang;
                        }

                        <tr>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td>Tổng Giá Sản Phẩm</td>
                            <td class="text-right" name="thanhTien">@thanhTien</td>
                        </tr>
                        <tr>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td>Phí Vận Chuyển</td>
                            <td class="text-right" name="phiGiaoHang">@phiGiaoHang</td>
                        </tr>
                        <tr>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td><strong>Tổng Tiền</strong></td>
                            <td class="text-right" name="tongTien"><strong>@tongTien</strong></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        @using (Html.BeginForm())
        {
            <div class="col mb-2">
                <div class="row">
                    <div class="col-sm-12  col-md-6">
                        <a href="~/loai-san-pham" class="btn btn-block btn-light">Mua Thêm</a>
                    </div>

                    <div class="col-sm-12 col-md-6 text-right">
                        <button type="submit" class="btn btn-lg btn-block btn-success text-uppercase">Thanh toán</button>
                    </div>

                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 mt-2">
                        <button class="btn btn-lg btn-block btn-danger text-uppercase">Xóa Giỏ Hàng</button>

                    </div>
                </div>
            </div>
        }
        @if (TempData["success"] != null)
        {
            @Html.Raw(TempData["success"])
        }

        @if (TempData["msg"] != null)
        {
            @Html.Raw(TempData["msg"])
        }
    </div>
</div>

